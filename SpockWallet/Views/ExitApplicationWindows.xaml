<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="180"
        Width="500"
        Height="180"
        CanResize="False"
        x:Class="SpockWallet.Views.ExitApplicationWindows"
        xmlns:localizations="clr-namespace:SpockWallet.Localizations;assembly=SpockWallet"
        WindowStartupLocation="CenterScreen"
        Icon="resm:SpockWallet.Assets.favicon.ico?assembly=SpockWallet"
        Title="Exiting..."
        Background="#F9F9F9">
  <Grid RowDefinitions="*,Auto">
    <TextBlock localizations:LocalizationAttachedPropertyHolder.Uid="WaitClose" FontSize="18" Foreground="#3598dc" TextWrapping="Wrap" Text="Please don't close the computer until this window closes." Margin="20"/>
    <ProgressBar Name="Progress" Grid.Row="1" Height="30" Maximum="60" Minimum="0" Margin="10,0,10,20" />
  </Grid>
</Window>
